Tasks
<div class="container">
  <table id="example" class="table table-striped table-bordered" style="width: 1000px;">
    <thead>
      <th>Name</th>
      <th>Last Heard From</th>
      <th>Active</th>
      <th>actions</th>
    </thead>
    <tbody>
      <% Task.all.each do |t| %>
      <tr>
        <td>
          <%= t.name %>
        </td>
        <td>
          <%= t.last_heartbeat_at %>
        </td>
        <td>
          <%= t.active? %>
        </td>
        <td>
          <% if !t.active? %>
            <%= button_to "Mark As Active", mark_as_active_task_path  %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>